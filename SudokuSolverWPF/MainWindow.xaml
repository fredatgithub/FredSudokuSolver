<Window x:Class="SudokuSolverWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SudokuSolverWPF"
        mc:Ignorable="d"
        Title="Sudoku Solver" Height="450" Width="450">
  <Grid Margin="10">
    <UniformGrid Name="SudokuGrid" Rows="9" Columns="9" Margin="0,0,0,40"/>

    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Height="30">
      <Button Content="Résoudre" Width="100" Margin="5" Click="SolveButton_Click"/>
      <Button Content="Réinitialiser" Width="100" Margin="5" Click="ResetButton_Click"/>
    </StackPanel>
  </Grid>
</Window>
